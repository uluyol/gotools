#!/usr/bin/env bash
. "$HOME/.bashrc"

font='/mnt/font/Consolas/13a/font'

trap 'kill $(jobs -p)' EXIT SIGINT SIGTERM

export EDITOR=E2
export NAMESPACE=$(mktemp -d /tmp/p9ns.XXXXX)
9 plumber &>/dev/null &
9 fontsrv &>/dev/null &
exec env PATH="$GOPATH/src/github.com/uluyol/tools/acmebin:$HOME/bin:$PLAN9/bin:$PATH" devdrawretina=1 $PLAN9/bin/acme -a -f "$font" "$@"
