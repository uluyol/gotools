#!/usr/bin/env bash
. "$HOME/.bashrc"

#font='/mnt/font/Consolas/13a/font'
font='/mnt/font/GoMono/12a/font'

trap 'kill $(jobs -pr)' EXIT SIGINT SIGTERM

export EDITOR=E2
export NAMESPACE=$(mktemp -d /tmp/p9ns.XXXXX)

9 plumber &>/dev/null &
9 fontsrv &>/dev/null &
env PATH="$GOPATH/src/github.com/uluyol/tools/acmebin:$HOME/bin:$PATH" devdrawretina=1 $PLAN9/bin/acme -a -f "$font" "$@"
