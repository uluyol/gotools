#!/usr/bin/env bash
. "$HOME/.bashrc"

#font='/mnt/font/Consolas/13a/font'
font='/mnt/font/GoMono/26a/font'

trap 'kill $subpids &>/dev/null' EXIT SIGINT SIGTERM

export acmeshell=$(which bash)
export EDITOR=E2
export NAMESPACE=$(mktemp -d /tmp/p9ns.XXXXX)

9 plumber &>/dev/null &
subpids="$subpids $!"
9 fontsrv &>/dev/null &
subpids="$subpids $!"
env PATH="$GOPATH/src/github.com/uluyol/tools/acmebin:$HOME/bin:$PATH" devdrawretina=1 $PLAN9/bin/acme -a -f "$font" "$@"
